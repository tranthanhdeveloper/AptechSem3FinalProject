@model Web.Areas.Instructors.Models.LessonItemViewModel

<form id="UpdateLessonForm" method="post" action="@Url.Action("Edit", "Lesson", new { Model.Id })" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.Id">
    <div class="form-group">
        <label for="exampleFormControlInput1">Lesson title</label>
        <input type="text" name="Title" class="form-control" id="exampleFormControlInput1" value="@Model.Title">
    </div>
    <div class="form-group">
        @if (Model.IsPreview)
        {
            <input id="isPreviewCourse" type="checkbox" name="IsPreview" checked />
        }
        else
        {
            <input id="isPreviewCourse" type="checkbox" name="IsPreview" />
        }
        <label for="isPreviewCourse">Is Preview</label>
    </div>
    <div class="form-group">
        <label class="btn btn-default btn-file">
            Choose Video<input class="video-input" type="file" name="uploadVideo" accept="video/*" required style="display: none;">
        </label>
        <div class="video-preview container" style="display:none;">
            <video class="pull-left" autoplay preload="auto" controls="controls" height="180" width="320"></video>
        </div>
    </div>
</form>


