
@using PagedList;
@using Context.Database;
@using PagedList.Mvc

@model IPagedList<Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

@section Scripts
{
    @*@Scripts.Render("~/Scripts/Admin/User")*@
}
<input type="hidden" id="postEditLink" value="/Admin/Category/EditCategory" />
<input type="hidden" id="postDeleteLink" value="/Admin/Category/DeleteCategory" />
<section class="content">
    <div class="row ajax-search-group">
        <form id="filter-form" action="/Admin/Category/FilterCategory">
            <div class="col-lg-12">
                <div class="box box-default box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title">Search Box</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">

                            <input type="hidden" name="page" value="1">
                            <input type="hidden" name="page_size" value="10">
                            <input type="hidden" name="pageChange" value="0">
                            <div class="col-md-12" id="product_search_input">
                                <div style="margin-bottom: 10px">
                                    <input type="text" class="form-control" name="Model_Name" placeholder="Input name user to search...">
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </form>

        <div class="col-lg-12">
            <div class="Search_Result">
                @Html.Partial("_partial_Search_Category", Model)

            </div>
        </div>
    </div>
</section>


