

@using Context.Database
@model IEnumerable<Context.Database.Course>
@{
    var listCourse = Model.ToList() as List<Course>;
}

@section Scripts
{
    @Scripts.Render("~/Scripts/Admin/Course.js");
}
<h4>Course</h4>
<ul>


    @foreach (var item in listCourse)
    {
        
        var lectures = item.GetLectures();
        var hasLecture = lectures.Count() > 0;

        <li class="@(hasLecture ? "parent_li_course" : "can-delete") ">
            <span data-id="@item.Id" class="text-success">
                <i class="@(hasLecture ? "fa fa-plus-square-o" : "")"></i>&nbsp;
                &nbsp;
                @item.Title &nbsp;

                <a class="btn-edit-course"
                   data-id="@item.Id"
                   data-api="/Admin/Category/GetEditCourse"
                   title="Edit">
                    <i class="fa fa-edit fa-fw"></i>
                </a>
                <a class="btn-admin-action text-danger"
                   data-id="@item.Id"
                   data-action="Delete"
                   data-api="/Admin/Course/DeleteCourse"
                   title="Xóa nhân viên"><i class="fa fa-trash fa-fw"></i></a>

                <div class="modal fade" id="myModaleditCourse" role="dialog" aria-labelledby="myModalLabeledit" aria-hidden="true">
                    <div class="modal-dialog ">
                        <form enctype="multipart/form-data" method="post" data-api="/Admin/Course/EditCourse">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabeledit">Update</h4>
                                </div>
                                <div class="modal-body">


                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal" style="padding: 6px 12px;">Cancel</button>
                                    <button type="submit" class="btn btn-primary btnEdit" style="padding: 6px 12px;">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </span>
        </li>
    }
</ul>


