@model Context.Database.User
<section class="post-content-area pt-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                @foreach (var course in Model.Courses)
                {
                    <div class="single-post row">

                        <div class="col-lg-3  col-md-3 meta-details">
                            <div class="user-details row">
                                <p class="date col-lg-12 col-md-12 col-6"><a href="#">@course.CreateDate.Value.ToShortDateString()</a> <span class="lnr lnr-calendar-full"></span></p>                                
                                <p class="view col-lg-12 col-md-12 col-6"><a href="#">@course.Orders.Count Views</a> <span class="lnr lnr-eye"></span></p>
                                <p class="comments col-lg-12 col-md-12 col-6"><a href="#">@course.Comments.Count Comments</a> <span class="lnr lnr-bubble"></span></p>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-9 ">
                            <div class="feature-img">
                                <img onerror="this.src='@Url.Content("~/img/image-not-found.jpg")'" class="img-fluid" src="~/img/courses/@course.Image" alt="">
                            </div>
                            <a class="posts-title" href="@Url.Action("CourseDetail", "Course", new { id = course.Id })"><h3>@course.Title</h3></a>
                            <p class="excert">
                                @course.Description
                            </p>
                        </div>

                    </div>
                }
            </div>
            <div class="col-lg-4 sidebar-widgets">
                <div class="widget-wrap">
                    <div class="single-sidebar-widget user-info-widget">
                        @*<img src="img/blog/user-info.png" alt="">*@
                        <a href="#"><h4>@Model.Name</h4></a>
                        <p>
                            @Model.Company
                        </p>                                               
                    </div>
                    <div class="single-sidebar-widget popular-post-widget">
                        <h4 class="popular-title">Popular Posts</h4>
                        <div class="popular-post-list">
                            <div class="single-post-list d-flex flex-row align-items-center">
                                <div class="thumb">
                                    <img class="img-fluid" src="img/blog/pp1.jpg" alt="">
                                </div>
                                <div class="details">
                                    <a href="blog-single.html"><h6>Space The Final Frontier</h6></a>
                                    <p>02 Hours ago</p>
                                </div>
                            </div>
                            <div class="single-post-list d-flex flex-row align-items-center">
                                <div class="thumb">
                                    <img class="img-fluid" src="img/blog/pp2.jpg" alt="">
                                </div>
                                <div class="details">
                                    <a href="blog-single.html"><h6>The Amazing Hubble</h6></a>
                                    <p>02 Hours ago</p>
                                </div>
                            </div>
                            <div class="single-post-list d-flex flex-row align-items-center">
                                <div class="thumb">
                                    <img class="img-fluid" src="img/blog/pp3.jpg" alt="">
                                </div>
                                <div class="details">
                                    <a href="blog-single.html"><h6>Astronomy Or Astrology</h6></a>
                                    <p>02 Hours ago</p>
                                </div>
                            </div>
                            <div class="single-post-list d-flex flex-row align-items-center">
                                <div class="thumb">
                                    <img class="img-fluid" src="img/blog/pp4.jpg" alt="">
                                </div>
                                <div class="details">
                                    <a href="blog-single.html"><h6>Asteroids telescope</h6></a>
                                    <p>02 Hours ago</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
